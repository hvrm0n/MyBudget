<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/very_light_green">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/titleAddBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom= "4dp"
            android:text="@string/basic_budget_name_edit"/>

        <EditText
            android:id="@+id/nameBudgetNew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:hint="@string/basic_budget_name"
            android:textSize="@dimen/regText"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/amountAddBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginBottom= "4dp"
            android:text="@string/basic_budget_savings_edit"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:weightSum="6">
            <EditText
                android:id="@+id/amountNew"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:hint="@string/basic_budget_savings"
                android:textSize="@dimen/regText"
                android:inputType="numberDecimal"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/currencyNewBudget"
                android:layout_width="wrap_content"
                tools:text="ла"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/typeAddBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginBottom= "4dp"
            android:text="@string/basic_budget_type"/>

        <Spinner
            android:id="@+id/typeNewBudget"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:text="@string/card_add_basic"/>

            <CheckBox
                android:id="@+id/checkBoxBasic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>