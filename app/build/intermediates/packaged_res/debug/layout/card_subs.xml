<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:gravity="center"
    android:orientation="vertical"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/subCancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/regText"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/cancelledSubs"/>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/very_light_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/subImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/subsicon"
                app:tint="@color/light_green"
                android:layout_gravity="center"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/subCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                tools:text="140₽"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/subName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="8dp"
                tools:text="Название"/>

            <TextView
                android:id="@+id/subBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/regText"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="4dp"
                tools:text="Счет: "
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/subDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/regText"
                android:textColor="@color/dark_green"
                android:layout_marginBottom="4dp"
                tools:text="12/10/2024"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/paidSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_sub_paid"
                android:textSize="@dimen/regText"
                android:backgroundTint="@color/light_green"
                android:textColor="@color/very_light_green"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/card_sub_cancel"
                android:textSize="@dimen/regText"
                android:backgroundTint="@color/light_orange"
                android:textColor="@color/very_light_green"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>