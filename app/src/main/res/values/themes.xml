<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyBudget" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/light_green</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MyBudget" parent="Base.Theme.MyBudget" />

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Circular</item>
    </style>

    <style name="ShapeAppearance.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- You can adjust this value according to your preference -->
    </style>
</resources>