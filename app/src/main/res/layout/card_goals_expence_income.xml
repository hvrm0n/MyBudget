<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/very_light_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:layout_marginBottom= "4dp"
            android:text="@string/basic_goals_edit"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/goalsBudgetValue"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="8"
                android:focusable="true"
                android:gravity="center"
                android:hint="@string/card_value"
                android:visibility="gone"
                android:inputType="numberDecimal"
                android:textSize="@dimen/regText" />

            <TextView
                android:id="@+id/currencyBudgetGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/regText"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="ла" />

            <TextView
                android:id="@+id/equalGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/regText"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_margin="4dp"
                android:text="=" />

            <EditText
                android:id="@+id/goalsNewValue"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="8"
                android:focusable="true"
                android:hint="@string/card_value"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="@dimen/regText" />

            <TextView
                android:id="@+id/currencyGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/regText"
                android:textStyle="bold"
                tools:text="ла" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:text="@string/budget"/>

        <Spinner
            android:id="@+id/spinnerBudgetGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>