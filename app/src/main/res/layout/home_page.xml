<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

  <include
        android:id="@+id/app_bar_main"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/light"
        app:itemBackground="@drawable/selection_drawer"
        app:itemTextColor="@drawable/selection_drawer_text"
        app:itemIconPadding="16dp"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/selection_drawer_text"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/home_page_drawer">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light"
            android:textSize="@dimen/regText"
            android:text="@string/nav_header_exit"
            android:background="@drawable/button_background"
            app:backgroundTint="@color/light_green"
            android:layout_gravity="bottom|center"/>
      </FrameLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>